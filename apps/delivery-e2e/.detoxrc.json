{
    "testRunner": "jest",
    "runnerConfig": "jest.config.json",
    "apps": {
        "ios.debug": {
            "type": "ios.app",
            "build": "cd ../../apps/delivery/ios && xcodebuild -workspace Delivery.xcworkspace -scheme Delivery -configuration Debug -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 13' -derivedDataPath ./build -quiet",
            "binaryPath": "../../apps/delivery/ios/build/Build/Products/Debug-iphonesimulator/Delivery.app"
        },
        "ios.release": {
            "type": "ios.app",
            "build": "cd ../../apps/delivery/ios && xcodebuild -workspace Delivery.xcworkspace -scheme Delivery -configuration Release -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 13' -derivedDataPath ./build -quiet",
            "binaryPath": "../../apps/delivery/ios/build/Build/Products/Release-iphonesimulator/Delivery.app"
        },

        "android.debug": {
            "type": "android.apk",
            "build": "cd ../../apps/delivery/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
            "binaryPath": "../../apps/delivery/android/app/build/outputs/apk/debug/app-debug.apk"
        },
        "android.release": {
            "type": "android.apk",
            "build": "cd ../../apps/delivery/android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release",
            "binaryPath": "../../apps/delivery/android/app/build/outputs/apk/release/app-release.apk"
        }
    },
    "devices": {
        "simulator": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 13"
            }
        },
        "emulator": {
            "type": "android.emulator",
            "device": {
                "avdName": "Pixel_4a_API_30"
            }
        }
    },
    "configurations": {
        "ios.sim.release": {
            "device": "simulator",
            "app": "ios.release"
        },
        "ios.sim.debug": {
            "device": "simulator",
            "app": "ios.debug"
        },

        "android.emu.release": {
            "device": "emulator",
            "app": "android.release"
        },
        "android.emu.debug": {
            "device": "emulator",
            "app": "android.debug"
        }
    }
}
